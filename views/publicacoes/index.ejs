<%- include('../header') %>
<div>
  <a class="btn btn-light" href="/publicacoes/nova">Nova publicacao</a>
</div>
<div>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">Publicação</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
    <% publicacoes.forEach(publicacao => { %>
        <tr>
        <td data-toggle="modal" data-target="#<%= publicacao.id %>">
          <%= publicacao.titulo %>
          <!-- Modal -->
          <div class="modal fade" id="<%= publicacao.id %>" tabindex="-1" role="dialog" aria-labelledby="<%= publicacao.id %>Title" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="<%= publicacao.id %>Title"><%= publicacao.titulo %></h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                    <%= publicacao.conteudo %>
                </div>
                <div class="modal-footer">
                </div>
              </div>
            </div>
          </div>
        </td>
        <td>
            <a href="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">Editar</a>
            <a href="/publicacoes/excluir/<%= categoria %>/<%= publicacao.id %>">Excluir</a>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</div>


<%- include('../footer') %>