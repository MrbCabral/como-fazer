<%- include('../header') %>
<div>
  <a class="btn btn-light" href="/categorias/nova">Nova categoria</a>
  <a class="btn btn-light" href="/publicacoes/nova">Nova publicação</a>
</div>
<div>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">Categoria</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
    <% categorias.forEach(categoria => { %>
        <tr>
          <td>
            <a href="/publicacoes/categoria/<%= categoria.id %>">
              <%= categoria.categoria %>
            </a>
          </td>
        <td>
            <a href="/categorias/editar/<%= categoria.id %>">Editar<i class="fas fa-edit"></i></a>
            <a href="/categorias/excluir/<%= categoria.id %>">Excluir<i class="fas fa-trash-alt"></i></a>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</div>

<%- include('../footer') %>